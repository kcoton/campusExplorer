{
	"extends": "@tsconfig/node18/tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"lib": [
			"es5", "es6", "DOM", "DOM.Iterable"
		]
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
